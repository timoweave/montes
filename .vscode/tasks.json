// filepath: /workspace/.vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format with ruff",
      "type": "shell",
      "command": "ruff --fix ${file}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "default"
      }
    }
  ]
}